[flake8]
max-line-length = 88
extend-ignore = E203, W503
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    test_venv,
    build,
    dist,
    *.egg-info
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
    appimage_fixer/cli.py:E501
    appimage_fixer/core.py:E501
    appimage_fixer/database.py:E501
